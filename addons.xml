<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.serienstream"
       name="serienstream.to"
       version="1.3.4"
       provider-name="emial18">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.urlresolver"/>
    </requires>
    <extension point="xbmc.python.pluginsource" provides="video" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Serienstream.to</summary>
        <description>Serienstream.to</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="repository.emial18" name="EmiAl18 XBMC Add-ons" version="1.0.0" provider-name="EmiAl18">
	<extension point="xbmc.addon.repository" name="EmiAl18 XBMC Add-ons Repository">
