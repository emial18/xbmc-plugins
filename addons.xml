		<checksum>https://raw.github.com/emial18/xbmc-plugins/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/emial18/xbmc-plugins/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from EmiAl18 add-on repository</summary>
		<description>Download and install add-ons by EmiAl18</description>
		<disclaimer>Add-ons for home usage in XBMC</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
